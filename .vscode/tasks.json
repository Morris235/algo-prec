{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All",
      "type": "shell",
      "command": "mkdir -p out && javac -d out $(find src -name \"*.java\")"
    },
    {
      "label": "Run Main",
      "type": "shell",
      "dependsOn": "Build All",
      "command": "java -cp out app.Main"
    }
  ]
}
